<html>
	<head>
		<% include ../_partials/head %>
        <style>
        .page-content {
            padding-top: 3.125rem;
            min-height: 100%;
            height: 100%;
        }
        </style>
        <link rel="stylesheet" href="/stylesheets/home.css">
	</head>
	<body>
		<% include ../_partials/header%>
		<div class="container page-content">
            <div class="grid">
                <div class="row cells3">
                    <div class="cell">
                        <h3>नाव: <%= citizen.name %></h3>
                    </div>
                    <div class="cell">
                        <h3>बायकोचे नाव: <%= citizen.wife_name %></h3>
                    </div>
                    <div class="cell">
                        <h3>मोबाईल नंबर: <%= citizen.mobile_no %></h3>
                    </div>
                </div>
                <div class="row cells">
                    <div class="cell">
                        <h3>पत्ता: <%= citizen.address %></h3>
                    </div>
                </div>
                <div class="row">
                    <a href="/citizen/<%= citizen._id %>/edit" class="primary button">माहिती बदल</a>
                    <a href="/citizen/<%= citizen._id %>/malmatta" class="primary button">मालमत्ता</a>
                    <a href="/citizen/<%= citizen._id %>/nine" class="primary button">नमुना ९</a>
                    <a href="/citizen/<%= citizen._id %>/kar" class="primary button">कर आकारा</a>
                </div>
                <div class="row">
                    <div class="card">
                        <canvas id="bar_chart" width="500" height="500"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <% include ../_partials/footer%>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
        <script>
            var chart = document.getElementById('bar_chart');
            var data = {
                labels: ['घरपट्टी', 'पाणीपट्टी', 'वीजपट्टी', 'आरोग्य कर'],
                datasets: [
                    {
                        label: 'चालू',
                        backgroundColor: '#3498db',
                        stack: 'Stack 0',
                        data: [
                            <%= current_gharpatti %>,
                            <%= current_panipatti %>,
                            <%= current_veej %>,
                            <%= current_aarogya %>
                        ]
                    },
                    {
                        label: 'थकबाकी',
                        backgroundColor: '#1abc9c',
                        stack: 'Stack 0',
                        data: [
                            <%= previous_gharpatti %>,
                            <%= previous_panipatti %>,
                            <%= previous_veej %>,
                            <%= previous_aarogya %>
                        ]
                    },
                    {
                        label: 'चालू भरणा',
                        backgroundColor: '#f1c40f',
                        stack: 'Stack 1',
                        data: [
                            <%= current_gharpatti %>,
                            <%= current_panipatti %>,
                            <%= current_veej %>,
                            <%= current_aarogya %>
                        ]
                    },
                    {
                        label: 'थकबाकी भरणा',
                        backgroundColor: '#e67e22',
                        stack: 'Stack 1',
                        data: [
                            <%= previous_gharpatti %>,
                            <%= previous_panipatti %>,
                            <%= previous_veej %>,
                            <%= previous_aarogya %>
                        ]
                    }
                ]
            };
            new Chart(chart, {
                type: 'bar',
                data: data,
                options: {
                    scales: {
                        xAxes: [{
                            stacked: true
                        }],
                        yAxes: [{
                            stacked: true
                        }]
                    }
                }
            })
        </script>
	</body>
</html>