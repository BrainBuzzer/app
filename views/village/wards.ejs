<html>
	<head>
		<% include ../_partials/head %>
        <style>
        .page-content {
            padding-top: 3.125rem;
            min-height: 100%;
            height: 100%;
        }
        </style>
	</head>
	<body class="bg-white">
		<% include ../_partials/header%>
		<div class="container page-content">
            <div class="grid">
                <div class="row cells12">
                    <div class="cell colspan4">
                        <form method="post">
                            <div class="input-control text full-size">
                                <label for="ward_name">Ward Name: </label>
                                <input type="text" name="ward_name" id="ward_name">
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="button primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <div class="cell colspan8">
                        <table class="dataTable border bordered" id="wards-table" data-role="datatable"  data-auto-width="false">
                            <thead>
                                <tr>
                                    <td style="display: none">ID (For technical purposes)</td>
                                    <td class="sortable-column bg-yellow">वार्डचे नाव</td>
                                </tr>
                            </thead>
                            <tbody>
                                <% wards.forEach((ward) => { %>
                                    <tr>
                                        <td style="display: none"><%= ward._id %></td>
                                        <td><%= ward.name %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
		<% include ../_partials/footer%>
        <script src="/javascripts/wards.js"></script>
	</body>
</html>