<html>
	<head>
		<% include ../_partials/head %>
        <style>
        .page-content {
            padding-top: 3.125rem;
            min-height: 100%;
            height: 100%;
        }
        </style>
	</head>
	<body>
		<% include ../_partials/header%>
		<div class="container page-content">
            <div class="grid">
                <% var count = 0 %>
                <% citizen.malmatta.forEach(kar => { %>
                <b>मालमत्ता क्रमांक <%= count++ %></b>
                <form method="post"><br>
                    <input type="hidden" value="<%= kar._id %>" name="kar_id">
                    <input type="hidden" value="<%= kar.current_gharpatti %>" name="gharpatti">
                    <div class="row cells">
                        <div class="cell">
                            <div class="input-control text full-size">
                                <label for="veej">वीजपट्टी</label>
                                <input type="text" name="veej" value="<%= kar.current_veej %>">
                            </div>        
                        </div>
                    </div>
                    <div class="row cells">
                        <div class="cell">
                            <div class="input-control text full-size">
                                <label for="aarogya">आरोग्य</label>
                                <input type="text" name="aarogya" value="<%= kar.current_aarogya %>">
                            </div>
                        </div>
                    </div>
                    <div class="row cells">
                        <div class="cell">
                            <div class="input-control text full-size">
                                <label for="pani">पाणीपट्टी</label>
                                <input type="text" name="pani" value="<%= kar.current_panipatti %>">
                            </div>        
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="button primary">कर संपादित करा</button>
                    </div>
                </form>
                <% }) %>
            </div>
        </div>
		<% include ../_partials/footer%>
	</body>
</html>